{
  "name": "crewchat",
  "private": true,
  "packageManager": "pnpm@10.13.1",
  "scripts": {
    "dev": "concurrently \"pnpm --filter @crewchat/web dev\" \"pnpm --filter @crewchat/socket-server dev\"",
    "dev:web": "pnpm --filter @crewchat/web dev",
    "dev:socket": "pnpm --filter @crewchat/socket-server dev",
    "build": "pnpm turbo run build"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "turbo": "^2.5.5"
  }
}